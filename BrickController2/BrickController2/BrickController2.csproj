<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="UI\Images\buwizz_image.png" />
    <None Remove="UI\Images\buwizz_image_small.png" />
    <None Remove="UI\Images\infra_image.png" />
    <None Remove="UI\Images\infra_image_small.png" />
    <None Remove="UI\Images\sbrick_image.png" />
    <None Remove="UI\Images\sbrick_image_small.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="UI\Images\buwizz_image.png" />
